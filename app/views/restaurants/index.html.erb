<h1>RESTAURANTS</h1>
<p>
<% @restaurants.each do |r| %>
  <%= r.name %>
  <%= r.address %>
  <%= r.phone_number %>
  <%= r.category %>
  <%= link_to "See details", restaurant_path(r.id), class: "btn btn-primary"%>
</p>
<% end %>

<%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary" %>

