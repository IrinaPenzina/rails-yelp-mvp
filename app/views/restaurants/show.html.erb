<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<h3>Reviews</h3>
<br>
<p>
<% @restaurant.reviews.each do |r| %>
  <%= r.content %>
  <%= r.rating %>
</p>
<% end %>

<h3>Add a Reviews</h3>
<br>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "submit", class: "btn btn-primary"%>
<% end %>

